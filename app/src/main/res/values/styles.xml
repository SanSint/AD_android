<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--Store Functions Style-->
    <style name="StoreAppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimaryStore</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkStore</item>
        <item name="colorAccent">@color/colorAccentStore</item>

        <item name="android:windowContentTransitions">true</item>
    </style>


    <style name="StoreAppTheme.NoActionBar" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimaryStore</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkStore</item>
        <item name="colorAccent">@color/colorAccentStore</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <!--Dept Theme-->
    <style name="DeptAppTheme.NoActionBar" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimaryStore</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkStore</item>
        <item name="colorAccent">@color/colorAccentStore</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="DeptTestAppTheme.NoActionBar" parent="Theme.Design.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryStore</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkStore</item>
        <item name="colorAccent">@color/colorAccentStore</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowContentTransitions">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
    </style>




</resources>
